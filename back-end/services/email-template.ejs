                                                    <p style="-webkit-box-sizing:border-box;-moz-box-sizing:border-box;box-sizing:border-box;line-height:12px;">
                                                        <%= order.buyer.firstName %>
                                                            <%= order.buyer.lastName %>
                                                    </p>

                                                    <p style="-webkit-box-sizing:border-box;-moz-box-sizing:border-box;box-sizing:border-box;line-height:12px;">
                                                        <%= order.deliveryAddress.line1 %> <br>
                                                            <%= order.deliveryAddress.line2 %>
